{
  "name": "Random Quote",
  "description": "Displays a random inspirational quote on your TRMNL device.",
  "version": "1.0",
  "author": "IntensiveCareBear",
  "markup": "<!DOCTYPE html>\n<html lang='en'>\n<head>\n    <meta charset='UTF-8'>\n    <meta name='viewport' content='width=device-width, initial-scale=1.0'>\n    <title>Random Quote</title>\n    <style>\n        /*\n         * Simple, high-contrast styling for e-ink displays.\n         * Using a serif font for a classic, readable look.\n         */\n        body {\n            font-family: serif;\n            background-color: #ffffff; /* White background */\n            color: #000000; /* Black text */\n            margin: 0;\n            padding: 2rem;\n            display: flex;\n            align-items: center;\n            justify-content: center;\n            height: 100vh;\n            text-align: center;\n        }\n\n        .quote-container {\n            max-width: 90%;\n            /* Using a large font size suitable for e-ink */\n            font-size: 2.5rem;\n            line-height: 1.4;\n            display: flex;\n            flex-direction: column;\n            gap: 1rem;\n        }\n\n        .author {\n            font-style: italic;\n            font-size: 1.5rem;\n            margin-top: 1rem;\n            text-align: right;\n            border-top: 2px solid #000;\n            padding-top: 0.5rem;\n        }\n\n        /* Basic animation to make it feel a bit more alive */\n        @keyframes fadeIn {\n            from { opacity: 0; }\n            to { opacity: 1; }\n        }\n\n        .quote {\n            animation: fadeIn 1s ease-in-out;\n        }\n    </style>\n</head>\n<body>\n\n    <div class='quote-container'>\n        <div id='quote-text' class='quote'></div>\n        <div id='quote-author' class='author'></div>\n    </div>\n\n    <script>\n        // Quotes embedded directly in the JavaScript to avoid file fetching issues.\n        const quotes = [\n            { text: \"The only way to do great work is to love what you do.\", author: \"Steve Jobs\" },\n            { text: \"It is during our darkest moments that we must focus to see the light.\", author: \"Aristotle Onassis\" },\n            { text: \"Life is what happens when you're busy making other plans.\", author: \"John Lennon\" },\n            { text: \"Get busy living or get busy dying.\", author: \"Stephen King\" },\n            { text: \"The future belongs to those who believe in the beauty of their dreams.\", author: \"Eleanor Roosevelt\" },\n            { text: \"The best way to predict the future is to create it.\", author: \"Abraham Lincoln\" },\n            { text: \"Believe you can and you're halfway there.\", author: \"Theodore Roosevelt\" },\n            { text: \"What you get by achieving your goals is not as important as what you become by achieving your goals.\", author: \"Zig Ziglar\" },\n            { text: \"Strive not to be a success, but rather to be of value.\", author: \"Albert Einstein\" },\n            { text: \"The secret of getting ahead is getting started.\", author: \"Mark Twain\" }\n        ];\n\n        // This function will display a random quote.\n        function displayRandomQuote() {\n            // Get a random index from the quotes array.\n            const randomIndex = Math.floor(Math.random() * quotes.length);\n            const randomQuote = quotes[randomIndex];\n\n            // Get the HTML elements to display the quote.\n            const quoteTextElement = document.getElementById('quote-text');\n            const quoteAuthorElement = document.getElementById('quote-author');\n\n            // Check if elements exist before trying to update them.\n            if (quoteTextElement && quoteAuthorElement) {\n                // Update the text content of the elements.\n                quoteTextElement.textContent = `“${randomQuote.text}”`;\n                quoteAuthorElement.textContent = `- ${randomQuote.author}`;\n            } else {\n                console.error(\"Could not find quote elements. Make sure the HTML is loaded correctly.\");\n            }\n        }\n\n        // We use DOMContentLoaded to ensure the script runs only after the\n        // HTML elements are fully loaded, which prevents a blank screen.\n        document.addEventListener('DOMContentLoaded', displayRandomQuote);\n    </script>\n\n</body>\n</html>"
}
